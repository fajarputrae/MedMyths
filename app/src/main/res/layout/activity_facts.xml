<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FactsActivity"
        android:padding="15dp"
        android:background="@color/backgroundColor">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/factsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facts"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/gotham_bold"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"/>

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:layout_below="@id/factsTitle"
            style="@style/MaterialSearchBarLight"
            app:mt_speechMode="false"
            app:mt_maxSuggestionsCount="10"
            app:mt_placeholder=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchBar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_below="@id/searchBar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/imgFacts"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/facts_placeholder"/>
            <TextView
                android:id="@+id/titleFacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facts Title"
                android:fontFamily="@font/gotham_bold"
                android:textColor="@color/textColor1"
                android:textSize="28sp"
                android:layout_toRightOf="@id/imgFacts"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>